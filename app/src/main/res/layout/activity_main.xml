<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/id_opengles_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="openglES"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/id_texture_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="纹理贴图"
        app:layout_constraintTop_toBottomOf="@+id/id_opengles_button" />


    <Button
        android:id="@+id/id_camera_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="摄像"
        app:layout_constraintTop_toBottomOf="@+id/id_texture_button" />

    <Button
        android:id="@+id/id_screen_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="屏幕录制"
        app:layout_constraintTop_toBottomOf="@+id/id_camera_button" />

</androidx.constraintlayout.widget.ConstraintLayout>